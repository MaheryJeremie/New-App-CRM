{% block stylesheets %}
    <style>
        :root {
            --primary: #4f46e5;
            --primary-dark: #4338ca;
            --primary-light: #6366f1;
            --gradient: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
            --text-light: #f9fafb;
            --text-muted: #6b7280;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body {
            background: #f9fafb;
            min-height: 100vh;
            display: flex;
            align-items: center;
            font-family: 'Segoe UI', system-ui, sans-serif;
        }

        .login-container {
            max-width: 480px;
            width: 100%;
            margin: 0 auto;
            padding: 2rem;
            animation: fadeIn 0.6s ease-out;
        }

        .login-brand {
            text-align: center;
            margin-bottom: 2.5rem;
            color: var(--primary);
        }

        .login-brand svg {
            margin-bottom: 1rem;
        }

        .login-brand h1 {
            font-weight: 700;
            font-size: 2rem;
            margin: 0.5rem 0;
            letter-spacing: -0.5px;
        }

        .login-brand p {
            color: var(--text-muted);
            margin: 0;
        }

        .login-card {
            background: white;
            border-radius: 1.25rem;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            transition: var(--transition);
        }

        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .login-header {
            background: var(--gradient);
            color: white;
            padding: 1.75rem;
            text-align: center;
        }

        .login-header h2 {
            margin: 0;
            font-weight: 600;
            font-size: 1.5rem;
        }

        .login-body {
            padding: 2.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: #374151;
        }

        .form-control {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 2px solid #e5e7eb;
            border-radius: 0.75rem;
            font-size: 1rem;
            transition: var(--transition);
        }

        .form-control:focus {
            border-color: var(--primary-light);
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
            outline: none;
        }

        .login-btn {
            width: 100%;
            padding: 1rem;
            background: var(--gradient);
            color: white;
            border: none;
            border-radius: 0.75rem;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: var(--transition);
            margin-top: 0.5rem;
        }

        .login-btn:hover {
            background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary) 100%);
            transform: translateY(-2px);
        }

        .login-footer {
            text-align: center;
            margin-top: 1.5rem;
            color: var(--text-muted);
            font-size: 0.875rem;
        }

        .login-footer a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @media (max-width: 576px) {
            .login-container {
                padding: 1.5rem;
            }
            
            .login-body {
                padding: 1.75rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="login-container">
    <div class="login-brand">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
        </svg>
        <h1>New App CRM</h1>
        <p>Gestion clientèle professionnelle</p>
    </div>

    <div class="login-card">
        <div class="login-header">
            <h2>Connexion</h2>
        </div>
        <div class="login-body">
            <form method="post" action="{{ path('app_login_post') }}">
                <div class="form-group">
                    <label for="inputEmail" class="form-label">Nom d'utilisateur</label>
                    <input type="text" name="username" id="inputEmail" class="form-control" required autofocus>
                </div>
                
                <div class="form-group">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
                
                <div class="form-group" style="display: flex; align-items: center;">
                    <input type="checkbox" id="remember_me" name="_remember_me" style="margin-right: 0.5rem;">
                    <label for="remember_me" style="margin: 0; color: var(--text-muted);">Se souvenir de moi</label>
                </div>
                
                <button type="submit" class="login-btn">
                    Se connecter
                </button>
            </form>
            
            <div class="login-footer">
                <a href="#">Mot de passe oublié ?</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}