{% extends 'base.html.twig' %}

{% block title %}Erreur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Une erreur s'est produite</h4>
            <p>{{ message }}</p>
            <hr>
            <p class="mb-0">
                <a href="{{ path('dashboard') }}" class="btn btn-primary">Retour au Dashboard</a>
            </p>
        </div>
    </div>
{% endblock %}