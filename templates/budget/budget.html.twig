{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        /* Variables globales */
:root {
    --primary: #4f46e5;
    --primary-dark: #4338ca;
    --primary-light: #6366f1;
    --success: #10b981;
    --warning: #f59e0b;
    --danger: #ef4444;
    --background: #f9fafb;
    --card-shadow: 0 4px 12px rgba(0, 0, 0, 0.05);
    --card-shadow-hover: 0 8px 24px rgba(0, 0, 0, 0.1);
}

.container {
    max-width: 1280px;
    margin: 2rem auto;
    padding: 0 2rem;
    animation: fadeIn 0.5s ease-out;
}

h1 {
    color: var(--primary-dark);
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid rgba(79, 70, 229, 0.1);
    letter-spacing: -0.025em;
}

/* Table Styles */
.table {
    width: 100%;
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: var(--card-shadow);
    transition: all 0.3s ease;
    margin-bottom: 2rem;
}

.table:hover {
    box-shadow: var(--card-shadow-hover);
}

.table thead {
    background: linear-gradient(90deg, var(--primary) 0%, var(--primary-light) 100%);
    color: white;
}

.table th {
    padding: 1.25rem 1rem;
    font-weight: 600;
    text-align: left;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.table td {
    padding: 1rem;
    border-bottom: 1px solid rgba(79, 70, 229, 0.1);
    color: #374151;
    font-size: 0.95rem;
}

.table tbody tr {
    transition: all 0.2s ease;
}

.table tbody tr:hover {
    background: rgba(79, 70, 229, 0.05);
    transform: translateX(5px);
}

/* Status Badges */
.badge {
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-weight: 500;
    font-size: 0.875rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
}

.badge::before {
    content: '';
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
    background: currentColor;
    opacity: 0.8;
}

.bg-warning {
    background: #fff7ed;
    color: var(--warning);
}

.bg-success {
    background: #ecfdf5;
    color: var(--success);
}

.bg-danger {
    background: #fef2f2;
    color: var(--danger);
}

.bg-secondary {
    background: #f3f4f6;
    color: #6b7280;
}

/* Button Styles */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.625rem 1.25rem;
    border-radius: 0.75rem;
    font-weight: 500;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    gap: 0.5rem;
}

.btn-warning {
    background: var(--warning);
    color: white;
    box-shadow: 0 4px 12px rgba(245, 158, 11, 0.2);
}

.btn-warning:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(245, 158, 11, 0.3);
}

.btn-danger {
    background: var(--danger);
    color: white;
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.2);
}

.btn-danger:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(239, 68, 68, 0.3);
}

.btn-primary {
    background: linear-gradient(90deg, var(--primary) 0%, var(--primary-light) 100%);
    color: white;
    box-shadow: 0 4px 12px rgba(79, 70, 229, 0.2);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(79, 70, 229, 0.3);
}

/* Modal Styles */
.modal-content {
    border: none;
    border-radius: 1rem;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    overflow: hidden;
}

.modal-header {
    background: linear-gradient(90deg, var(--primary) 0%, var(--primary-light) 100%);
    color: white;
    border: none;
    padding: 1.5rem;
}

.modal-title {
    font-weight: 600;
    font-size: 1.25rem;
    letter-spacing: -0.025em;
}

.btn-close {
    color: white;
    opacity: 0.8;
    transition: all 0.2s ease;
}

.btn-close:hover {
    opacity: 1;
    transform: rotate(90deg);
}

.modal-body {
    padding: 2rem;
}

.modal-footer {
    border-top: 1px solid rgba(79, 70, 229, 0.1);
    padding: 1.25rem;
}

/* Form Styles */
.form-label {
    font-weight: 500;
    color: #374151;
    margin-bottom: 0.5rem;
    display: block;
}

.form-control {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 0.75rem;
    font-size: 1rem;
    transition: all 0.2s ease;
}

.form-control:focus {
    border-color: var(--primary-light);
    box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
    outline: none;
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive Design */
@media (max-width: 768px) {
    .container {
        padding: 1rem;
        margin: 1rem auto;
    }

    h1 {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
    }

    .table td, 
    .table th {
        padding: 0.75rem;
    }

    .btn {
        padding: 0.5rem 1rem;
    }

    .modal-body {
        padding: 1.5rem;
    }
}

/* Loading State */
.table-loading {
    position: relative;
    min-height: 200px;
}

.table-loading::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 40px;
    height: 40px;
    margin: -20px 0 0 -20px;
    border: 3px solid var(--primary-light);
    border-top-color: var(--primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}
    </style>
{% endblock %}

{% block title %}Liste des Budgets{% endblock %}

{% block body %}
    <h1>Liste des Budgets</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Client</th>
                <th>Montant</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for budget in budgets %}
                <tr>
                    <td>{{ budget.customer.name }}</td>
                    <td>{{ budget.valeur }} â‚¬</td>
                    <td>{{ budget.date|date('Y-m-d') }}</td>
                
                </tr>

                <!-- Popup de modification -->
                <div class="modal fade" id="editBudgetModal{{ budget.id }}" tabindex="-1" aria-labelledby="editBudgetModalLabel{{ budget.id }}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editBudgetModalLabel{{ budget.id }}">Modifier le budget</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!-- Formulaire de modification -->
                                <form action="{{ path('budget_update') }}" method="POST">
                                    <div class="mb-3">
                                        <input type="text" value="{{budget.id}}" name="id" hidden>
                                        <label for="valeur{{ budget.id }}" class="form-label">Montant</label>
                                        <input type="number" class="form-control" id="valeur{{ budget.id }}" name="valeur" value="{{ budget.valeur }}" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('dashboard') }}" class="btn btn-primary">Retour au Dashboard</a>
{% endblock %}